<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>edit blog</title>
</head>

<body>
    <h4>Edit Blog</h4>

    <form action="/editblog" method="POST">
        Title: <input type="text" name="title" placeholder="title"><br>

        Category: <select name="categoryid" placeholder="categories" id="categoryid">
            <% categories.forEach(record => { %>
            <option value="<%= record.id%>"> <%= record.title%> </option>
            <% }) %>
        </select>
        <br>


        Author: <select name="authorid" placeholder="author" id="authorid">
            <% authors.forEach(record => { %>
            <option value="<%= record.id%>"> <%= record.name%> </option>
            <% }) %>
        </select>
        <br>

        <!-- author:<input type="text" name="author" placeholder="author"><br> -->
        Summary :<input type="text" name="summary" placeholder="content" id="summary"><br>
        <p> Full Content :</p>    <textarea name="body" placeholder="content"  cols="30" rows="10"></textarea><br>
        <!-- imageURL: <input type="text" name="imgURL" placeholder="imageURL"><br> -->
        <!-- postdate: <input type="text" name="postdate" placeholder="YYYY-MM-DD" id="postdate"><br> -->
        <input type="submit" value="submit" name="" id="">
    </form>

</body>

</html>